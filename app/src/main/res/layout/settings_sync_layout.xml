<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">



    <EditText
        android:id="@+id/et_server_url"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lblMessage"
        android:layout_marginTop="3dp"
        android:background="@drawable/custom_textbox"
        android:enabled="true"
        android:gravity="center"
        android:hint="123.231.13.199:1025"
        android:inputType="text"
        android:textColor="@color/greenColor" />


    <com.datamation.megaheaters.control.FinacFont
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_server_url"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Console DB Configuration"
        android:textColor="@color/greenColor" />

    <Spinner
        android:id="@+id/spinner_server_db"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:background="@drawable/custom_textbox" />

    <com.datamation.megaheaters.control.FinacFont
        android:id="@+id/lblMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Server Configuration URL (http://)"
        android:textSize="16dp"
        android:textColor="@color/greenColor"
        />

</RelativeLayout>