<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!--   <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@drawable/custom_label"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spnTrans"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:background="@drawable/custom_textbox" />

            <SearchView
                android:id="@+id/stock_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
               />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Spinner
                android:id="@+id/spnTourCode"
                android:layout_width="445dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/custom_textbox" />

            <com.datamation.megaheaters.control.FinacFont
                android:id="@+id/txtTotQty"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:background="@drawable/custom_label"
                android:gravity="center" />
        </TableRow>

    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_textbox"
        android:weightSum="3">

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/lblMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="CODE"
            android:textColor="@color/unselected"
             />

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="PRODUCT"
            android:textColor="@color/unselected"
            />

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/textVie3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="QOH"
            android:textColor="@color/unselected"/>

    </TableRow>

    <ListView
        android:id="@+id/listviewStockData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp"
        android:background="@android:color/white"></ListView>


</LinearLayout>