<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="2dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical">

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="PRODUCT"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all"
                       />
                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/et_item"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                         android:editable="false"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"></EditText>

                    <Button
                        android:id="@+id/btn_item_search"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/search_button" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true">

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="UNITS       "
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all"
                        android:layout_marginLeft="10dp"
                         />

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="0"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                     />

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="PRICE   "
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all"
                        android:textAllCaps="true"
                        android:layout_marginLeft="10dp"
                       />
                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:editable="false"
                        android:text="0.00"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                   >

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="QTY          "
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all" />
                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/et_pieces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:editable="false"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:layout_weight="1"
                        android:selectAllOnFocus="true"
                        android:text="0"></EditText>

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="DISC  "
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all"
                        android:layout_marginLeft="10dp"
                       />
                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/lblTotalDisc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ems="10"
                        android:editable="false"
                        android:inputType="numberDecimal"
                        android:layout_weight="1"
                        android:selectAllOnFocus="true"
                        android:text="0">

                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true">

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="AMOUNT   "
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all"
                        android:layout_marginLeft="10dp"
                        />
                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/lblTotalVal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                         android:editable="false"
                        android:gravity="right"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        ></EditText>
                </LinearLayout>

                <!-- <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="DISCOUNT"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblTotalDisc"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_label"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="right"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" >
                    </TextView>
                </TableRow> -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:padding="2dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="TOTAL      "
                        android:layout_marginLeft="10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/greenColor"
                        android:textSize="@dimen/font_for_all" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=":-"
                        android:textSize="@dimen/font_for_all"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/lblTotal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:editable="false"
                        android:gravity="right"
                        android:text="0.00"
                        android:textColor="@android:color/black"
                        ></EditText>
                </LinearLayout>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btn_add"
                        android:theme="@style/AppTheme.Button"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:text="ADD"
                        android:gravity="center"

                       />

                    <Button
                        android:id="@+id/btn_free"
                        android:theme="@style/AppTheme.Button"
                        android:layout_width="250dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:text="FREE / DISC"
                        android:gravity="center"
                        android:visibility="visible" />
                </TableRow>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/unselected"
        android:orientation="horizontal">

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.25"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="PRODUCT"
            android:textColor="@color/unselected"
            android:textSize="14sp"
            />

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/indexhistory3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="QTY"
            android:textColor="@color/unselected"
            android:textSize="14sp" />

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/indexmanual3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="@drawable/custom_label"
            android:gravity="center"
            android:text="AMOUNT"
            android:textColor="@color/unselected"
            android:textSize="14sp"
             />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_order_det"
        android:paddingBottom="2dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_view_diveder"
        android:dividerHeight="1dp">
    </ListView>

</LinearLayout>