<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_container_pre_sales"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/Relative_layer_heading_pre_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/unselected"
        android:gravity="top|center">

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/lblMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:shadowColor="@color/lightgray"
            android:text="Sales Order Summary"
            android:textAllCaps="true"
            android:textColor="@color/greenColor"
            android:textSize="28sp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_vw_heading_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Relative_layer_heading_pre_sale"
        android:padding="15dp"
        app:cardBackgroundColor="@color/btn_colour"
        app:cardCornerRadius="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

       <!-- <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">-->

            <LinearLayout
                android:id="@+id/Relative_layer_heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/TextView02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="GROSS VALUE -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblGross"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="0.00"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/textView4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="LINE DISCOUNT -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblLineDisc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="0.00"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln1Pre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:paddingTop="5dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/textView8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="SCHEME DISCOUNT -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblSchDisc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="0.00"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln2Pre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/textView7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="TOTAL DISCOUNT -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblDisc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="0.00"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln3Pre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/TextView01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="NET VALUE -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblNetVal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:text="0.00"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_textbox"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/textView3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="TOTAL QUANTITY -"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />

                    <com.datamation.megaheaters.control.FinacFont
                        android:id="@+id/lblQty"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:textColor="@color/greenColor"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
       <!-- </RelativeLayout>-->
    </android.support.v7.widget.CardView>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fab:fab_shadowColor="#66000000"
        fab:fab_showShadow="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_fab_label="Choose an action"
        fab:menu_icon="@android:drawable/ic_dialog_dialer"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="true"
        fab:menu_openDirection="up">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_save"
            fab:fab_label="Save"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_set_as"
            fab:fab_label="Pause"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            fab:fab_label="Discard"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>