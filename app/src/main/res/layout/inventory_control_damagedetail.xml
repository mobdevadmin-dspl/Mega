<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_item"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>

        <Button
            android:id="@+id/btn_item_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_action_search_copy" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_unit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:enabled="false"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="QOH"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Cases"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_cases"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:inputType="number"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Pieces"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/et_pieces"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>
    </TableRow>

    <TableRow
        android:id="@+id/table_row_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/_reason"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:textColor="@android:color/black"></EditText>

        <Button
            android:id="@+id/reason_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_action_search_copy" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@color/greenColor"
            android:text="Add"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </TableRow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1.25"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Item Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indexhistory3"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="1"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Cases"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indexmanual3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.50"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Pieces"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/indexmanual4"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.50"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Reason"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_loading_det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
