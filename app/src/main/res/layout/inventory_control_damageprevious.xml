<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Referance No :"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_refno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Manual No :"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_manuno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Remarks :"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_remarks"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Location From"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_locfrom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Location To"
            android:textColor="@color/greenColor"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/view_locto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@android:color/black"
            android:textSize="12dp"></EditText>


    </TableRow>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:orientation="horizontal">

        <!--         <TextView -->
        <!--             android:id="@+id/view_itemcode" -->
        <!--             android:layout_width="wrap_content" -->
        <!--             android:layout_height="wrap_content" -->
        <!--             android:layout_marginLeft="1dip" -->
        <!--             android:layout_marginRight="1dip" -->
        <!--             android:background="@color/list_background_pressed" -->
        <!--             android:gravity="center" -->
        <!--             android:text="Item code" -->
        <!--             android:textAppearance="?android:attr/textAppearanceSmall" -->
        <!--             android:textColor="@android:color/white" -->
        <!--             android:textStyle="bold" /> -->

        <TextView
            android:id="@+id/view_descrip"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.55"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.11"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Case"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_peis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Pieses"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_peis1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="1dip"
            android:layout_weight="0.50"
            android:background="@color/list_background_pressed"
            android:gravity="center"
            android:text="Reason"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_previsummery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
