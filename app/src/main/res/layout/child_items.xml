<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/txtitem_code_topic"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtQty_topic"
            android:layout_alignBottom="@+id/txtQty_topic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/custom_label"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="ITEM CODE"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.datamation.megaheaters.control.FinacFont
        android:id="@+id/txtQty_topic"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txtitem_code_topic"
        android:layout_toRightOf="@+id/txtitem_code_topic"
        android:clickable="false"
            android:focusable="false"

        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text="QTY"
        android:background="@drawable/custom_label"
        android:textColor="@color/unselected"
        android:textSize="16sp"
        android:textStyle="bold" />

        <com.datamation.megaheaters.control.FinacFont
            android:id="@+id/txt_txnDate_topic"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/txtQty_topic"
            android:layout_toRightOf="@+id/txtQty_topic"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="TXN DATE"
            android:background="@drawable/custom_label"
            android:textColor="@color/unselected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.datamation.megaheaters.control.FinacFont
             android:id="@+id/tot_amt_topic"
             android:layout_width="120dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toEndOf="@+id/txt_txnDate_topic"
             android:layout_toRightOf="@+id/txt_txnDate_topic"
             android:gravity="center_horizontal"
             android:text="AMOUNT"
            android:focusable="false"
            android:textColor="@color/unselected"
            android:background="@drawable/custom_label"
             android:textSize="16sp"
             android:textStyle="bold" />




    </RelativeLayout>
 <!--   chlid Item-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/r2_child"
    android:clickable="false"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_below="@+id/rl_header_container">


    <TextView
        android:id="@+id/txtItemcodeRow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtqtyRow"
        android:layout_alignBottom="@+id/txtqtyRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:text=""
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtqtyRow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_toRightOf="@+id/txtItemcodeRow"
        android:layout_toEndOf="@+id/txtItemcodeRow"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtDateRow"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtqtyRow"
        android:layout_toEndOf="@+id/txtqtyRow"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtAmtRow"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtDateRow"
        android:layout_toEndOf="@+id/txtDateRow"
        android:textSize="13sp" />


</RelativeLayout>



</RelativeLayout>