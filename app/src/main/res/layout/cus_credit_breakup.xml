<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_label">

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Name :   "
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />

                <com.datamation.megaheaters.control.FinacFont
                    android:id="@+id/lblCusName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_label">

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Town :   "
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected"/>

                <com.datamation.megaheaters.control.FinacFont
                    android:id="@+id/lblTown"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_label">

                <com.datamation.megaheaters.control.FinacFont
                    android:id="@+id/textView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Total outstanding :   "
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />

                <com.datamation.megaheaters.control.FinacFont
                    android:id="@+id/lblTotOutstanding"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Date"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Bill No"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected"/>

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Amount"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Paid"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected"/>

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Balance"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />

                <com.datamation.megaheaters.control.FinacFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/custom_label"
                    android:gravity="center_horizontal"
                    android:text="Age"
                    android:textSize="@dimen/font_for_all"
                    android:textColor="@color/unselected" />
            </TableRow>

            <ListView
                android:id="@+id/lvCreditDash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:divider="@color/list_view_diveder"
                android:dividerHeight="1dp"
                android:scrollbars="horizontal">

            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>